{
  "name": "proof-of-presence",
  "version": "0.1.0",
  "description": "Collection of contracts aiming to implement tokenized timeshare access to land projects.",
  "private": true,
  "engines": {
    "node": ">= 16.0.0"
  },
  "repository": "github:closerdao/proof-of-presence",
  "author": "Closer Dao",
  "license": "MIT",
  "keywords": [
    "ethereum",
    "smart-contracts",
    "boilerplate",
    "hardhat",
    "solidity"
  ],
  "devDependencies": {
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-verify": "^2.0.13",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@0.3.0-beta.12",
    "@openzeppelin/contracts": "^4.7.0",
    "@typechain/ethers-v5": "^9.0.0",
    "@typechain/hardhat": "^4.0.0",
    "@types/chai": "^4.3.0",
    "@types/fs-extra": "^9.0.13",
    "@types/luxon": "^3.0.1",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "chai": "^4.3.6",
    "chai-ethers": "^0.0.1",
    "cross-env": "^7.0.2",
    "dotenv": "^16.0.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "ethers": "^5.6.2",
    "fs-extra": "^10.1.0",
    "hardhat": "^2.9.2",
    "hardhat-deploy": "0.11.22",
    "hardhat-deploy-tenderly": "^0.1.1",
    "hardhat-diamond-abi": "^2.0.0",
    "hardhat-gas-reporter": "^1.0.8",
    "luxon": "^3.0.4",
    "mocha": "^9.2.2",
    "moment": "^2.29.4",
    "prettier": "^2.6.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.20",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.7.0",
    "typechain": "^7.0.0",
    "typescript": "^4.6.3"
  },
  "scripts": {
    "prepare": "node ./.setup.js && hardhat typechain",
    "lint": "eslint \"**/*.{js,ts}\" && solhint src/**/*.sol",
    "lint:fix": "eslint --fix \"**/*.{js,ts}\" && solhint --fix src/**/*.sol",
    "format": "prettier --check \"**/*.{ts,js,sol}\"",
    "format:fix": "prettier --write \"**/*.{ts,js,sol}\"",
    "compile": "hardhat compile",
    "void:deploy": "hardhat deploy --report-gas",
    "test": "cross-env HARDHAT_DEPLOY_FIXTURE=true HARDHAT_COMPILE=true mocha --recursive test",
    "gas": "cross-env REPORT_GAS=true hardhat test",
    "coverage": "cross-env HARDHAT_DEPLOY_FIXTURE=true hardhat coverage",
    "dev:node": "hardhat node --hostname 0.0.0.0",
    "dev": "hardhat node --hostname 0.0.0.0 --watch",
    "local:dev": "hardhat --network localhost deploy --watch",
    "execute": "node ./_scripts.js run",
    "deploy": "node ./_scripts.js deploy",
    "verify": "node ./_scripts.js verify",
    "export": "node ./_scripts.js export",
    "hardhat": "hardhat",
    "fork:execute": "node ./_scripts.js fork:run",
    "fork:deploy": "node ./_scripts.js fork:deploy",
    "fork:dev": "node ./_scripts.js fork:dev",
    "fork:node": "node ./_scripts.js fork:node",
    "fork:test": "node ./_scripts.js fork:test",
    "tenderly:push": "node ./_scripts.js tenderly:push",
    "commit": "npx git-cz"
  },
  "dependencies": {
    "@openzeppelin/contracts-upgradeable": "^4.8.0-rc.1",
    "@types/lodash": "^4.14.182",
    "date-fns": "^2.28.0",
    "lodash": "^4.17.21"
  }
}
